# Twitter API Configuration
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Reddit API Configuration
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=AI_Trend_Monitor/1.0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_RAW=ai-social-raw
KAFKA_TOPIC_PROCESSED=ai-social-processed

# MinIO / S3 Configuration
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=lakehouse

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077
SPARK_APP_NAME=AI_Trend_Monitor

# Delta Lake Configuration
DELTA_BRONZE_PATH=s3a://bronze/social_media
DELTA_SILVER_PATH=s3a://silver/social_posts
DELTA_GOLD_PATH=s3a://gold/trending_topics

# DuckDB Configuration
DUCKDB_DATABASE_PATH=./analytics/lakehouse.duckdb

# Monitoring Configuration
LOG_LEVEL=INFO
METRICS_ENABLED=true

# AI Model Configuration (for future RAG implementation)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Collection Configuration
COLLECTION_INTERVAL_SECONDS=300  # 5 minutes
MAX_TWEETS_PER_QUERY=100
MAX_REDDIT_POSTS_PER_SUBREDDIT=50

# Keywords for AI trend monitoring
AI_KEYWORDS=GPT,Claude,LLM,Machine Learning,Deep Learning,AI,OpenAI,Anthropic,Gemini,Llama
